<style>
    a {
        text-decoration: none !important;
    }
    button {
        margin-bottom: 10%;
    }
    table {
        margin-top: 5%;
    }
    ul {
        justify-content: center;
    }
</style>
<center>
    <div class="row justify-content-center"">
        <div class="col-sm-8">
            <table class="table" border="1">
                <thead>
                    <colgroup>
                    <tr class="table-success">
                        <th scope="col" col width="10%">카테고리</th>
                        <th scope="col" col width="20%">제목</th>
                        <th scope="col" col width="10%">작성자</th>
                        <th scope="col" col width="20%">게시일</th>
                        <th scope="col" col width="10%">훈수</th>
                    </tr>
                    </colgroup>
                </thead>
                <tbody>
                <%
                    page_num = posts.length
                    if(page_num > 10)
                        view_post = 10
                    else
                        view_post = page_num
                %>
                <% for( let i = 0; i < view_post; i++){%>
                    <% if(posts[i].post_kategorie == "Python") {%>
                        <tr>
                            <th><%= posts[i].post_kategorie%>
                            <th scope="row"><a href="/read/<%=posts[i].post_no-1%>"><%= posts[i].post_title %></a></th>
                            <th><%= posts[i].user_id%></th>
                            <th><%= posts[i].date%></th>
                            <th>0</th>
                        </tr>
                    <%} else {%>
                    <%}%>
                <%}%>
                </tbody>
            </table>
            <%
                if (limit_page > 10)
                    limit_page = 10
            %>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" href="/page/<%= 1 %>" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <% for(var j = 0; j < limit_page; j++){ %>
                  <li class="page-item"><a class="page-link" href="/page/<%= j + 1 %>"><%= j + 1 %></a></li>
                  <% } %>
                  <li class="page-item">
                    <a class="page-link" href="/page/<%= j %>" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
            </nav>
        </div>
    </div>
</center>

<form action="/writepost_btn" method="POST">
    <button class="btn btn-outline-secondary" type="submit">게시글 등록</button>
</form>